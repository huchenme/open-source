{
  "name": "starwars-names-open-source",
  "version": "0.0.0-development",
  "description": "Get random Star Wars names",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "prettier-all": "./node_modules/.bin/prettier --write 'src/**/*.js'",
    "test": "mocha --require babel-register src/**/*.test.js",
    "eslint": "eslint src",
    "precommit": "lint-staged && yarn test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huchenme/open-source.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Hu Chen <chen@huchen.me> (http://huchen.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huchenme/open-source/issues"
  },
  "homepage": "https://github.com/huchenme/open-source#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "mocha": "^4.0.1",
    "prettier": "1.7.4",
    "semantic-release": "^8.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
